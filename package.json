{
  "name": "@arpinum/eventstore",
  "version": "2.2.2",
  "description": "Simple event store based on PostgreSQL",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build"
  ],
  "scripts": {
    "tslint": "tslint --fix 'lib/**/*.ts'",
    "jest:unit": "jest --config ./tests/jest.config.js",
    "jest:e2e": "jest --config ./tests/jest.config.e2e.js",
    "testw": "jest --config ./tests/jest.config.js --watch",
    "prettier": "prettier --write '**/*.{js,json,md,ts}'",
    "compile": "tsc",
    "test": "run-s -c compile jest:unit tslint",
    "prebuild": "rm -rf ./build",
    "build": "tsc -p ./tsconfig.prod.json",
    "preversion": "run-s test build",
    "postversion": "git push && git push --tags && npm publish"
  },
  "author": "Arpinum",
  "license": "MIT",
  "repository": "arpinum-oss/js-eventstore.git",
  "keywords": [
    "event",
    "eventstore",
    "ddd",
    "cqrs",
    "eventsourcing"
  ],
  "devDependencies": {
    "@types/jest": "23.1.0",
    "@types/knex": "0.14.14",
    "@types/node": "10.3.3",
    "@types/sinon": "5.0.1",
    "jest": "23.1.0",
    "npm-run-all": "4.1.3",
    "prettier": "1.13.5",
    "sinon": "6.0.0",
    "ts-jest": "22.4.6",
    "ts-node": "6.1.1",
    "tslint": "5.10.0",
    "tslint-config-prettier": "1.13.0",
    "typescript": "2.9.2"
  },
  "dependencies": {
    "@arpinum/defender": "1.0.0",
    "knex": "0.14.6",
    "pg": "7.4.3",
    "pg-query-stream": "1.1.1"
  }
}
