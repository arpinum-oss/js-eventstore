{
  "name": "@arpinum/eventstore",
  "version": "2.2.5",
  "description": "Simple event store based on PostgreSQL",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build"
  ],
  "scripts": {
    "lint": "eslint . --fix --ext .ts,.js",
    "jest:unit": "jest",
    "jest:e2e": "E2E_TESTS=true jest",
    "testw": "jest --config ./tests/jest.config.js --watch",
    "prettier": "prettier --write '**/*.{js,json,md,ts}'",
    "compile": "tsc",
    "test": "run-s -c compile jest:unit lint",
    "prebuild": "rm -rf ./build",
    "build": "tsc -p ./tsconfig.prod.json",
    "preversion": "run-s test build",
    "postversion": "git push && git push --tags && npm publish"
  },
  "author": "Arpinum",
  "license": "MIT",
  "repository": "arpinum-oss/js-eventstore.git",
  "keywords": [
    "event",
    "eventstore",
    "ddd",
    "cqrs",
    "eventsourcing"
  ],
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/knex": "0.16.1",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "npm-run-all": "4.1.5",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@arpinum/defender": "^1.0.7",
    "@arpinum/promising": "^4.2.2",
    "knex": "^3.1.0",
    "pg": "^8.11.3",
    "pg-query-stream": "^4.5.3"
  },
  "jest": {
    "preset": "ts-jest"
  }
}
