{
  "name": "@arpinum/eventstore",
  "version": "2.2.1",
  "description": "Simple event store based on PostgreSQL",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": ["build"],
  "scripts": {
    "tslint": "tslint --fix 'lib/**/*.ts'",
    "jest:unit": "jest --config ./tests/jest.config.js",
    "jest:e2e": "jest --config ./tests/jest.config.e2e.js",
    "testw": "jest --config ./tests/jest.config.js --watch",
    "prettier": "prettier --write '**/*.ts' '**/*.js' '**/*.md'",
    "compile": "tsc --noEmit",
    "test": "run-s -c compile jest:unit tslint",
    "prebuild": "rm -rf ./build",
    "build": "tsc",
    "preversion": "run-s test build",
    "postversion": "git push && git push --tags && npm publish"
  },
  "author": "Arpinum",
  "license": "MIT",
  "repository": "arpinum/js-eventstore.git",
  "keywords": ["event", "eventstore", "ddd", "cqrs", "eventsourcing"],
  "devDependencies": {
    "@types/jest": "22.2.0",
    "@types/knex": "0.14.8",
    "@types/node": "9.4.6",
    "@types/sinon": "4.3.0",
    "jest": "22.4.2",
    "npm-run-all": "4.1.2",
    "prettier": "1.11.1",
    "sinon": "4.4.2",
    "ts-jest": "22.4.1",
    "ts-node": "5.0.1",
    "tslint": "5.9.1",
    "tslint-config-prettier": "1.9.0",
    "typescript": "2.7.2"
  },
  "dependencies": {
    "@arpinum/promising": "2.2.2",
    "knex": "0.14.4",
    "pg": "7.4.1",
    "pg-query-stream": "1.1.1"
  }
}
